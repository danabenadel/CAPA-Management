<template>
  <div class="flex h-screen bg-gray-50">
    <Sidebar />

    <!-- Main Content -->
    <div class="flex-1 overflow-auto">
      <!-- Header -->
      <header class="bg-white border-b border-gray-200 px-8 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-800">Gestion des Utilisateurs</h1>
            <p class="text-gray-600">Gérer les utilisateurs et leurs permissions</p>
          </div>
          <button
            @click="showNewUserModal = true"
            class="btn-primary flex items-center space-x-2"
          >
            <UserPlus :size="20" />
            <span>Nouvel Utilisateur</span>
          </button>
        </div>
      </header>

      <!-- Filters -->
      <div class="bg-white border-b border-gray-200 px-8 py-4">
        <div class="flex items-center space-x-4">
          <div class="flex-1">
            <div class="relative">
              <Search class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" :size="20" />
              <input
                v-model="searchQuery"
                type="text"
                placeholder="Rechercher un utilisateur..."
                class="input-field pl-10"
              />
            </div>
          </div>
          <select v-model="filterRole" class="input-field">
            <option value="">Tous les rôles</option>
            <option value="admin">Admin</option>
            <option value="manager">Manager</option>
            <option value="user">Utilisateur</option>
          </select>
          <select v-model="filterDepartment" class="input-field">
            <option value="">Tous départements</option>
            <option value="Qualité">Qualité</option>
            <option value="Production">Production</option>
            <option value="Laboratoire">Laboratoire</option>
            <option value="Maintenance">Maintenance</option>
          </select>
        </div>
      </div>

      <!-- Content -->
      <main class="p-8">
        <div class="card">
          <div v-if="loading" class="text-center py-12">
            <p class="text-gray-600">Chargement...</p>
          </div>

          <div v-else-if="filteredUsers.length === 0" class="text-center py-12">
            <UserX class="mx-auto text-gray-400 mb-4" :size="48" />
            <p class="text-gray-600">Aucun utilisateur trouvé</p>
          </div>

          <div v-else class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">ID</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Nom</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Email</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Département</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Rôle</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Statut</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Dernière connexion</th>
                  <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr
                  v-for="user in filteredUsers"
                  :key="user.id"
                  class="border-b border-gray-100 hover:bg-gray-50"
                >
                  <td class="py-3 px-4 text-sm text-gray-600">#{{ user.id }}</td>
                  <td class="py-3 px-4">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-medium">
                          {{ getUserInitials(user) }}
                        </span>
                      </div>
                      <span class="text-sm font-medium text-gray-800">
                        {{ user.prenom }} {{ user.nom }}
                      </span>
                    </div>
                  </td>
                  <td class="py-3 px-4 text-sm text-gray-600">{{ user.email }}</td>
                  <td class="py-3 px-4 text-sm text-gray-600">{{ user.departement }}</td>
                  <td class="py-3 px-4">
                    <span
                      class="px-2 py-1 text-xs font-medium rounded-full"
                      :class="getRoleClass(user.role)"
                    >
                      {{ getRoleLabel(user.role) }}
                    </span>
                  </td>
                  <td class="py-3 px-4">
                    <span
                      class="px-2 py-1 text-xs font-medium rounded-full"
                      :class="user.actif ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700'"
                    >
                      {{ user.actif ? 'Actif' : 'Inactif' }}
                    </span>
                  </td>
                  <td class="py-3 px-4 text-sm text-gray-600">{{ formatDate(user.derniere_connexion) }}</td>
                  <td class="py-3 px-4">
                    <div class="flex items-center space-x-2">
                      <button
                        @click="editUser(user)"
                        class="p-1 text-gray-600 hover:bg-gray-50 rounded"
                        title="Modifier"
                      >
                        <Edit :size="16" />
                      </button>
                      <button
                        @click="toggleUserStatus(user)"
                        class="p-1 text-gray-600 hover:bg-gray-50 rounded"
                        :title="user.actif ? 'Désactiver' : 'Activer'"
                      >
                        <ShieldCheck :size="16" />
                      </button>
                      <button
                        @click="deleteUser(user)"
                        class="p-1 text-red-600 hover:bg-red-50 rounded"
                        title="Supprimer"
                      >
                        <Trash2 :size="16" />
                      </button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
</template>

<script setup>
import { UserPlus, Search, UserX, Edit, ShieldCheck, Trash2 } from 'lucide-vue-next'


// Authentification temporairement désactivée pour tests
// definePageMeta({
//   middleware: 'auth'
// })

useHead({
  title: 'Utilisateurs'
})

const api = useApi()

const users = ref([])
const loading = ref(true)
const searchQuery = ref('')
const filterRole = ref('')
const filterDepartment = ref('')
const showNewUserModal = ref(false)

const filteredUsers = computed(() => {
  let result = users.value

  if (searchQuery.value) {
    const query = searchQuery.value.toLowerCase()
    result = result.filter(user =>
      `${user.prenom} ${user.nom}`.toLowerCase().includes(query) ||
      user.email.toLowerCase().includes(query)
    )
  }

  if (filterRole.value) {
    result = result.filter(user => user.role === filterRole.value)
  }

  if (filterDepartment.value) {
    result = result.filter(user => user.departement === filterDepartment.value)
  }

  return result
})

const getUserInitials = (user) => {
  return `${user.prenom?.[0] || ''}${user.nom?.[0] || ''}`.toUpperCase()
}

const getRoleClass = (role) => {
  const classes = {
    'admin': 'bg-purple-100 text-purple-700',
    'manager': 'bg-blue-100 text-blue-700',
    'user': 'bg-gray-100 text-gray-700'
  }
  return classes[role] || 'bg-gray-100 text-gray-700'
}

const getRoleLabel = (role) => {
  const labels = {
    'admin': 'Administrateur',
    'manager': 'Manager',
    'user': 'Utilisateur'
  }
  return labels[role] || role
}

const formatDate = (date) => {
  if (!date) return 'Jamais'
  return new Date(date).toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  })
}

const editUser = (user) => {
  // TODO: Ouvrir modal d'édition
  console.log('Edit user:', user)
}

const toggleUserStatus = async (user) => {
  try {
    await api.updateUser(user.id, { actif: !user.actif })
    user.actif = !user.actif
  } catch (error) {
    console.error('Error toggling user status:', error)
    alert('Erreur lors de la mise à jour du statut')
  }
}

const deleteUser = async (user) => {
  if (!confirm(`Êtes-vous sûr de vouloir supprimer l'utilisateur ${user.prenom} ${user.nom} ?`)) {
    return
  }

  try {
    await api.deleteUser(user.id)
    users.value = users.value.filter(u => u.id !== user.id)
  } catch (error) {
    console.error('Error deleting user:', error)
    alert('Erreur lors de la suppression de l\'utilisateur')
  }
}

onMounted(async () => {
  try {
    const response = await api.getAllUsers()
    if (response.success) {
      users.value = response.data
    }
  } catch (error) {
    console.error('Error loading users:', error)
  } finally {
    loading.value = false
  }
})
</script>